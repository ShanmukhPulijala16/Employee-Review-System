<% if(locals.user){ %>

<div class="d-flex justify-content-center my-4">
  <div class="card text-center" style="width: 30rem">
    <div class="card-header">Add Employee</div>
    <div class="card-body">
      <form
        class="row g-3"
        id="create-company-form"
        action="/create"
        method="POST"
      >
        <!-- Username -->
        <div class="col-12">
          <input
            type="text"
            class="form-control"
            id="username"
            name="username"
            placeholder="Name"
            autocomplete="off"
            required
          />
        </div>
        <!-- Email -->
        <div class="col-12">
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Email"
            autocomplete="off"
            required
          />
        </div>
        <!-- Gender -->
        <div>
          <span>Gender: &nbsp;</span>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="gender"
              id="flexRadioDefault1"
              value="male"
            />
            <label class="form-check-label" for="flexRadioDefault1">
              <!-- Default radio -->
              Male
            </label>
          </div>
          <div class="form-check form-check-inline">
            <input
              class="form-check-input"
              type="radio"
              name="gender"
              id="flexRadioDefault2"
              value="female"
            />
            <label class="form-check-label" for="flexRadioDefault2">
              <!-- Default checked radio -->
              Female
            </label>
          </div>
        </div>
        <!-- Password -->
        <div class="col-md-6">
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Password"
            autocomplete="off"
            required
          />
        </div>
        <!-- Confirm password -->
        <div class="col-md-6">
          <input
            type="password"
            class="form-control"
            id="confirmPassword"
            name="confirmPassword"
            placeholder="Confirm Password"
            autocomplete="off"
            required
          />
        </div>
        <!-- User role input -->
        <label>Role</label>
        <select
          class="form-select"
          id="role"
          name="role"
          aria-label="Default select example"
          required
        >
          <option selected value="employee">Employee</option>
          <!-- <option value="admin">Admin</option> -->
        </select>
        <div class="d-flex justify-content-around">
          <button class="btn btn-danger w-45">Cancel</button>
          <button type="submit" class="btn btn-primary w-45">Add</button>
        </div>
      </form>
    </div>
    <!-- <div class="card-footer text-body-secondary">
      Enter details in order to sign up
    </div> -->
    <div class="card-footer text-body-secondary"></div>
  </div>
</div>

<% } %>
