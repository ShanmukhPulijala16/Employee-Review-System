<div class="d-flex justify-content-center my-4">
  <div class="card text-center" style="width: 30rem">
    <div class="card-header">Sign In</div>
    <div class="card-body">
      <form class="row g-3" id="create-company-form" action="/create-session" method="POST">
        <div class="col-12">
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            placeholder="Email"
            autocomplete="off"
            required
          />
        </div>
        <div class="col-12">
          <input
            type="password"
            class="form-control"
            id="password"
            name="password"
            placeholder="Password"
            autocomplete="off"
            required
          />
        </div>
        <div class="col-12">
          <button type="submit" class="btn btn-primary w-100">Login</button>
        </div>
      </form>
    </div>
    <div class="card-footer text-body-secondary">
      <!-- Enter registered email and password to login -->
      Not an user? <a href="/sign-up">Register</a>
    </div>
  </div>
</div>
